{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2016",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types",
      "global.d.ts"
    ],
    "paths": {
      "@": ["src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/**/*"],
  "files": [
    "global.d.ts"
  ]
}
